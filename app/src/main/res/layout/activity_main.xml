<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/mainBackgroundColor"
    tools:context="com.example.obernalp.e_games.activities.MainActivity">

    <TextView
        android:id="@+id/main_tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_tv_title_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/main_tv_title_marginTop"
        android:fitsSystemWindows="true"
        android:fontFamily="@font"
        android:gravity="center"
        android:text="@string/main_title"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/main_tv_title_textSize" />

    <GridLayout
        android:id="@+id/main_gl_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/main_grid_marginTop"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="2">

        <!-- Row 1 -->
        <!-- Column 1 -->
        <android.support.v7.widget.CardView
            android:id="@+id/main_cv_infiltrado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_card_marginBottom"
            android:layout_marginEnd="@dimen/main_card_marginEnd"
            android:layout_marginStart="@dimen/main_card_marginStart"
            app:cardCornerRadius="@dimen/main_card_cardCornerRadius"
            app:cardElevation="@dimen/main_card_elevation">

            <RelativeLayout
                android:layout_width="@dimen/main_card_width"
                android:layout_height="@dimen/main_card_height">

                <ImageView
                    android:layout_width="@dimen/main_card_icon_width"
                    android:layout_height="@dimen/main_card_icon_width"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/main_game_1"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_infiltrado" />

                <TextView
                    android:layout_width="@dimen/main_card_band_width"
                    android:layout_height="@dimen/main_card_band_height"
                    android:layout_marginStart="@dimen/main_card_band_marginStart"
                    android:layout_marginTop="@dimen/main_card_band_marginTop"
                    android:background="@color/bandColor"
                    android:rotation="315"
                    android:text="@string/main_game_1"
                    android:textAlignment="center"
                    android:textColor="@color/cardColor"
                    android:textSize="@dimen/main_card_band_textSize" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!-- Column 2 -->
        <android.support.v7.widget.CardView
            android:id="@+id/main_cv_espia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_card_marginBottom"
            android:layout_marginEnd="@dimen/main_card_marginEnd"
            android:layout_marginStart="@dimen/main_card_marginStart"
            app:cardCornerRadius="@dimen/main_card_cardCornerRadius"
            app:cardElevation="@dimen/main_card_elevation">

            <RelativeLayout
                android:layout_width="@dimen/main_card_width"
                android:layout_height="@dimen/main_card_height">

                <ImageView
                    android:layout_width="@dimen/main_card_icon_width"
                    android:layout_height="@dimen/main_card_icon_width"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/main_game_2"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_ladron" />

                <TextView
                    android:layout_width="@dimen/main_card_band_width"
                    android:layout_height="@dimen/main_card_band_height"
                    android:layout_marginStart="@dimen/main_card_band_marginStart"
                    android:layout_marginTop="@dimen/main_card_band_marginTop"
                    android:background="@color/bandColor"
                    android:rotation="315"
                    android:text="@string/main_game_2"
                    android:textAlignment="center"
                    android:textColor="@color/cardColor"
                    android:textSize="@dimen/main_card_band_textSize" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!-- Row 2 -->
        <!-- Column 1 -->
        <android.support.v7.widget.CardView
            android:id="@+id/main_cv_psicologo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_card_marginBottom"
            android:layout_marginEnd="@dimen/main_card_marginEnd"
            android:layout_marginStart="@dimen/main_card_marginStart"
            app:cardCornerRadius="@dimen/main_card_cardCornerRadius"
            app:cardElevation="@dimen/main_card_elevation">

            <RelativeLayout
                android:layout_width="@dimen/main_card_width"
                android:layout_height="@dimen/main_card_height">

                <ImageView
                    android:layout_width="@dimen/main_card_icon_width"
                    android:layout_height="@dimen/main_card_icon_width"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/main_game_3"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_lobo" />

                <TextView
                    android:layout_width="@dimen/main_card_band_width"
                    android:layout_height="@dimen/main_card_band_height"
                    android:layout_marginStart="@dimen/main_card_band_marginStart"
                    android:layout_marginTop="@dimen/main_card_band_marginTop"
                    android:background="@color/bandColor"
                    android:rotation="315"
                    android:text="@string/main_game_3"
                    android:textAlignment="center"
                    android:textColor="@color/cardColor"
                    android:textSize="@dimen/main_card_band_textSize" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!-- Column 2 -->
        <android.support.v7.widget.CardView
            android:id="@+id/main_cv_ladron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_card_marginBottom"
            android:layout_marginEnd="@dimen/main_card_marginEnd"
            android:layout_marginStart="@dimen/main_card_marginStart"
            app:cardCornerRadius="@dimen/main_card_cardCornerRadius"
            app:cardElevation="@dimen/main_card_elevation">

            <RelativeLayout
                android:layout_width="@dimen/main_card_width"
                android:layout_height="@dimen/main_card_height">

                <ImageView
                    android:layout_width="@dimen/main_card_icon_width"
                    android:layout_height="@dimen/main_card_icon_width"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/main_game_4"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_oveja" />

                <TextView
                    android:layout_width="@dimen/main_card_band_width"
                    android:layout_height="@dimen/main_card_band_height"
                    android:layout_marginStart="@dimen/main_card_band_marginStart"
                    android:layout_marginTop="@dimen/main_card_band_marginTop"
                    android:background="@color/bandColor"
                    android:rotation="315"
                    android:text="@string/main_game_4"
                    android:textAlignment="center"
                    android:textColor="@color/cardColor"
                    android:textSize="@dimen/main_card_band_textSize" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </GridLayout>

    <RelativeLayout
        android:layout_width="@dimen/main_infiltrado_image_width"
        android:layout_height="@dimen/main_infiltrado_image_height"
        android:layout_below="@id/main_gl_container"
        android:layout_centerHorizontal="true">

        <ImageView xmlns:app="http://www.picturetopeople.org/text_generator/others/transparent/transparent-text-generator.html"
            android:id="@+id/main_iv_infiltrado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="@dimen/main_infiltrado_image_marginTop"
            android:contentDescription="@string/app_name"
            android:src="@drawable/main_txt_infiltrado" />

    </RelativeLayout>

</RelativeLayout>