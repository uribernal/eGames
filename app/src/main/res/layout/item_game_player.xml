<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_cv_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/game_cv_height"
    android:layout_marginBottom="@dimen/game_cv_marginBottom"
    android:layout_marginEnd="@dimen/game_cv_marginEnd"
    android:layout_marginStart="@dimen/game_cv_marginStart"
    android:layout_marginTop="@dimen/game_cv_marginTop"
    app:cardBackgroundColor="@color/bandColor"
    app:cardElevation="@dimen/game_cv_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/game_cv_rl_padding">

        <TextView
            android:id="@+id/game_starting_player"
            android:layout_width="@dimen/game_cv_startingPlayer_height"
            android:layout_height="@dimen/game_cv_startingPlayer_width"
            android:layout_centerVertical="true"
            android:background="@drawable/circle"
            android:backgroundTint="@color/mainBackgroundColor"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/game_player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/game_player_name"
            android:textAlignment="center"
            android:textSize="@dimen/game_cv_tv_textSize" />

    </RelativeLayout>
</android.support.v7.widget.CardView>