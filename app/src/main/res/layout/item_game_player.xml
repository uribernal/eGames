<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_cv_container"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/bandColor"
    android:layout_height="60dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/game_starting_player"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:backgroundTint="@color/mainBackgroundColor"
            android:background="@drawable/circle"
            android:layout_centerVertical="true"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/game_player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Player 0"
            android:layout_centerVertical="true"
            android:textAlignment="center" />

    </RelativeLayout>
</android.support.v7.widget.CardView>